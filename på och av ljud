int soundPlayed = 0; // Variabel för att hålla reda på om ljudet har spelats

void setup() {
  pinMode(7, OUTPUT); // Anger pin 7 som en utgång
  playStartupSound(); // Spelar upp startljudet när hårdvaran startas
}

void loop() {
  // Kollar om ljudet har spelats
  if (soundPlayed == 0) {
    // Om ljudet inte har spelats än, spelar den upp avstängningsljudet
    playShutdownSound();
    soundPlayed = 1; // Markera att ljudet har spelats
  }

}

// Funktionen för att spela upp startljudet
void playStartupSound() {
  tone(7, 1000); // Spela ton med frekvens 1000 Hz
  delay(500);    // Spela tonen i 500 millisekunder
  noTone(7);     // Stäng av tonen
}

// Funktion för att spela upp avstängningsljudet
void playShutdownSound() {
  tone(7, 500);  // Spela ton med frekvens 500 Hz
  delay(500);    // Spela tonen i 500 millisekunder
  noTone(7);     // Stäng av tonen
}
